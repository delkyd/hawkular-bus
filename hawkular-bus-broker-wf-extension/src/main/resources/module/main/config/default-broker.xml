<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-2.0.xsd
                           http://activemq.apache.org/schema/core http://activemq.apache.org/schema/core/activemq-core.xsd">

    <bean class="org.springframework.beans.factory.config.PropertyPlaceholderConfigurer" />

    <broker xmlns="http://activemq.apache.org/schema/core"
            brokerName="${org.hawkular.bus.broker.name}"
            persistent="${org.hawkular.bus.broker.persistent}"
            useJmx="${org.hawkular.bus.broker.use-jmx}"
            dataDirectory="${jboss.server.data.dir}/broker"
            useShutdownHook="false">
        <transportConnectors>
            <transportConnector name="${org.hawkular.bus.broker.connector.name}" uri="${org.hawkular.bus.broker.connector.protocol}://${org.hawkular.bus.broker.connector.address}:${org.hawkular.bus.broker.connector.port}" />
        </transportConnectors>

        <persistenceAdapter>
            <kahaDB directory="${jboss.server.data.dir}/broker/kaha" />
        </persistenceAdapter>
    </broker>
</beans>
